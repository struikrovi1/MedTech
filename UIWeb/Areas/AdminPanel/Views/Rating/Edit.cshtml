@section MyScripts{
<script>
    $(".colorList .box").on("click", function(){
         $(".colorList .box").removeClass("box-active")
        $(this).toggleClass("box-active")
        const value = $(this).attr("id")
        $("#colorInput").val(value)
    })

</script>
}