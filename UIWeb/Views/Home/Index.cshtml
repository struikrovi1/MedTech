<section>
    <div class="w-100 float-left slider-con text-lg-left text-center">
        <div class="container">

            <div class="slider-inner-con banner-overlay-img">
                @* style = "background-color: @Model.Rating[0].Background "*@
                <div class="row overlay-img">
                    <div class="col-lg-6 d-flex align-items-center">
                        <div class="slider-left-con">
                            <h2 class="text-white">
                                What Our <br>
                                Patients Say About
                                Our Services
                            </h2>
                            <p class="mb-0">
                                4.8 Overall Rating, Based<br>
                                on 2500+ Reviews.
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div id="carouselExampleControls" style="width: 400px;" class="carousel slide" data-ride="carousel">

                            @{
                                var count = 1;
                            }
                            <div class="carousel-inner" @*style = "background-color:@Model.Rating[0].Background"*@>
                                @foreach (var item in Model.Rating)
                                {


                                    <div style="background-color: @item.Background; padding: 20px; border-radius: 25px; border: 15px solid #fa8236;" class="carousel-item @(count == 1 ? "active" : null)">
                                        <div class="auther-con w-100 d-inline-block">
                                            <div class="d-flex">
                                                <img src="@item.AuthorPhoto" alt="auther-img" style="width:150px; height:150px; object-fit: cover; border-radius:100%;"/>
                                                @* <i style = "color:#fa8236; font-size:35%; position: absolute; right:20%; " class="@item.Service.IconUrl"></i>*@
                                                <div style="margin-left:20px!important;" class="auther-title d-inline-block">
                                                    <h4>@item.AuthorName</h4>

                                                    <p class="mb-0">@item.Service.ServiceName Patient</p>
                                                </div>
                                            </div>



                                        </div>
                                        <p class="mb-0">@item.Comment</p>
                                    </div>

                                    count++;

                                }
                            </div>


                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <!-- <span class="carousel-control-prev-icon" aria-hidden="true"></span> -->
                                <i class="fas fa-arrow-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <!-- <span class="carousel-control-next-icon" aria-hidden="true"></span> -->
                                <i class="fas fa-arrow-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
