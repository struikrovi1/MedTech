@model Entitites.Rating

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype = "multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorPhoto" class="control-label"></label>
                <input type = "file" asp-for="AuthorPhoto" style = "padding: 20px; display: block;"  name = "Image"  />
             
                <span asp-validation-for="AuthorPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background" class="control-label"></label>
                <input type="hidden" id="colorInput" asp-for="Background" class="form-control" />
                <span asp-validation-for="Background" class="text-danger"></span>

                <div class="colorList d-flex align-items-center">
                    <div class="box" id="tomato"></div>
                    <div class="box" id="royalblue"></div>
                    <div class="box" id="forestgreen"></div>
                    <div class="box" id="gold"></div>
                    <div class="box" id="rosybrown"></div>
                    <div class="box" id="firebrick"></div>
                    <div class="box" id="white"></div>
                    <div class="box" id="mediumturquoise"></div>
                    <div class="box" id="coral"></div>
                    <div class="box" id="blueviolet"></div>
                    <div class="box" id="aqua"></div>
                    <div class="box" id="beige"></div>

                </div>


            </div>
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
              <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ServiceId" class="form-control mb-2">
                    @foreach (var cat in ViewBag.ServiceList as List<Service>)
                    {
                        <option value="@cat.Id"> @cat.ServiceName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

